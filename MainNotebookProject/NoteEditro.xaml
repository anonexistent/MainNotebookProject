<Window x:Class="MainNotebookProject.NoteEditro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainNotebookProject"
        mc:Ignorable="d"
        Title="NoteEditro" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tb1" FontSize="18" Background="Aqua" MinHeight="100" SelectionTextBrush="Red" AcceptsReturn="True" Margin="0,00,0,-0" VerticalScrollBarVisibility="Visible"/>

            <InkCanvas x:Name="ic1"/>

            <Button x:Name="saveBtn" Content="save" Margin="0,-20,0,20" Click="saveBtn_Click"/>
            <Button x:Name="deleteBtn" Content="delete" Click="deleteBtn_Click"/>
        </StackPanel>

    </Grid>
</Window>
